@model EmprestimoModel
@{
    ViewData["title"] = "Adicionar Emprestimo";
}

<form method="post" asp-controller="Emprestimo" asp-action="AdicionarEmprestimo"><br/>
    <input type="text" asp-for="Recebedor" id="recebedor" placeholder="Quem está recebendo" /><br />

    <span asp-validation-for="Recebedor"></span><br/>

    <input type="text" asp-for="Fornecedor" id="fornecedor" placeholder="Quem está emprestando"><br />

    <span asp-validation-for="Fornecedor"></span><br/>

    <input type="text" asp-for="Livro" id="livro" placeholder="Livro" /><br />

    <span asp-validation-for="Livro"></span><br/>


<button type="submit" class="btn btn-outline-warning">Adociomar</button>
    <a class="btn btn-outline-primary text-black" asp-controller="Emprestimo"asp-action="Index">Voltar</a>
</form>